{
  "name": "simple-dynamo-wrapper",
  "version": "0.1.0",
  "description": "A simple and intuitive wrapper for AWS DynamoDB operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "husky"
  },
  "keywords": [
    "dynamodb",
    "aws",
    "wrapper",
    "database",
    "nosql",
    "typescript"
  ],
  "author": "theDashpuntsag",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theDashpuntsag/simple-dynamo-wrapper.git"
  },
  "bugs": {
    "url": "https://github.com/theDashpuntsag/simple-dynamo-wrapper/issues"
  },
  "homepage": "https://github.com/theDashpuntsag/simple-dynamo-wrapper#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jiti": "^2.6.1",
    "prettier": "^3.7.3",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "zod": "^4.1.13"
  }
}
